<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="PopupDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/PopupDialogTitle</item>
    </style>
    <style name="PopupDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textSize">10dp</item>
    </style>
    
    <style name="ItemRow">
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
	    
    <style name="DescTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">105dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#009900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Spinner" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#009900</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="bold">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DescTitle.FullWidth">
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>